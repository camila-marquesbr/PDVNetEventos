<Window x:Class="PDVNetEventos.Views.EditarFornecedor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar Fornecedor" Height="260" Width="480"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="16">
        <TextBlock Text="Serviço"/>
        <TextBox Text="{Binding NomeServico}" Margin="0,4,0,8"/>

        <TextBlock Text="CNPJ"/>
        <TextBox Text="{Binding CNPJ}" Margin="0,4,0,8"/>

        <TextBlock Text="Preço Padrão (R$)"/>
        <TextBox Text="{Binding PrecoPadrao}" Margin="0,4,0,8"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Cancelar" Width="100" Command="{Binding CancelarCommand}" Margin="0,0,8,0"/>
            <Button Content="Salvar" Width="120" Command="{Binding SalvarCommand}"/>
        </StackPanel>
    </StackPanel>
</Window>