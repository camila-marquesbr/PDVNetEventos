<Window x:Class="PDVNetEventos.Views.VincularParticipanteAoEvento"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vincular Participante" Height="220" Width="420"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="16">
        <TextBlock Text="Selecione o participante:" Margin="0,0,0,8"/>
        <ComboBox ItemsSource="{Binding Participantes}"
                  DisplayMemberPath="NomeCompleto"
                  SelectedValuePath="Id"
                  SelectedValue="{Binding ParticipanteId}"
                  Height="28"/>

        <Separator Margin="0,12,0,12"/>

        <!-- sem Spacing; use Margin -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancelar" Width="100" IsCancel="True" Margin="0,0,8,0"/>
            <Button Content="Adicionar" Width="120" Command="{Binding AdicionarCommand}"/>
        </StackPanel>
    </StackPanel>
</Window>