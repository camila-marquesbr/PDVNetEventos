<Window x:Class="PDVNetEventos.Views.EditarParticipante"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar Participante" Height="280" Width="480"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="16">
        <TextBlock Text="Nome"/>
        <TextBox Text="{Binding Nome}" Margin="0,4,0,8"/>

        <TextBlock Text="CPF"/>
        <TextBox Text="{Binding CPF}" Margin="0,4,0,8"/>

        <TextBlock Text="Telefone"/>
        <TextBox Text="{Binding Telefone}" Margin="0,4,0,8"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Cancelar" Width="100" Command="{Binding CancelarCommand}" Margin="0,0,8,0"/>
            <Button Content="Salvar" Width="120" Command="{Binding SalvarCommand}"/>
        </StackPanel>
    </StackPanel>
</Window>