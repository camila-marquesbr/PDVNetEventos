<Window x:Class="PDVNetEventos.Views.EditarEvento"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar Evento" Height="420" Width="520"
        WindowStartupLocation="CenterScreen">

    <!-- Atalhos de teclado -->
    <Window.InputBindings>
        <KeyBinding Key="Enter" Command="{Binding SalvarCommand}"/>
        <KeyBinding Key="Escape" Command="{Binding CancelarCommand}"/>
    </Window.InputBindings>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Nome do Evento" FontWeight="Bold"/>
        <TextBox Grid.Row="0" Margin="0,22,0,10"
                 Text="{Binding NomeEvento, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Grid.Row="1" Text="Data de Início" FontWeight="Bold"/>
        <DatePicker Grid.Row="1" Margin="0,22,0,10"
                    SelectedDate="{Binding DataInicio}"/>

        <TextBlock Grid.Row="2" Text="Data de Fim" FontWeight="Bold"/>
        <DatePicker Grid.Row="2" Margin="0,22,0,10"
                    SelectedDate="{Binding DataFim}"/>

        <TextBlock Grid.Row="3" Text="Capacidade Máxima" FontWeight="Bold"/>
        <TextBox Grid.Row="3" Margin="0,22,0,10"
                 Text="{Binding Capacidade, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Grid.Row="4" Text="Orçamento Máximo (R$)" FontWeight="Bold"/>
        <TextBox Grid.Row="4" Margin="0,22,0,10"
                 Text="{Binding Orcamento, UpdateSourceTrigger=PropertyChanged}"/>

        <StackPanel Grid.Row="5" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Salvar" Width="110" Margin="0,0,10,0"
                    Command="{Binding SalvarCommand}"/>
            <Button Content="Cancelar" Width="110" IsCancel="True"
                    Command="{Binding CancelarCommand}"/>
        </StackPanel>
    </Grid>
</Window>