<Window x:Class="PDVNetEventos.Views.ListarEventos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lista de Eventos" Height="420" Width="760"
        WindowStartupLocation="CenterScreen">
    <DockPanel Margin="12">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,8">
            <Button Content="Recarregar" Width="100" Command="{Binding RecarregarCommand}"/>
        </StackPanel>

        <DataGrid ItemsSource="{Binding Itens}"
                  AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="60"/>
                <DataGridTextColumn Header="Evento" Binding="{Binding Nome}" Width="2*"/>
                <DataGridTextColumn Header="Período" Binding="{Binding Periodo}" Width="1.3*"/>
                <DataGridTextColumn Header="Orçamento (R$)" Binding="{Binding Orcamento, StringFormat=N2}" Width="120"/>
                <DataGridTextColumn Header="Gasto (R$)" Binding="{Binding Gasto, StringFormat=N2}" Width="120"/>
                <DataGridTextColumn Header="Saldo (R$)" Binding="{Binding Saldo, StringFormat=N2}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>