<Window x:Class="PDVNetEventos.Views.RelTiposParticipante"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tipos de Participantes"
        Height="380" Width="420"
        WindowStartupLocation="CenterScreen">
    <DockPanel Margin="12">
        <Button DockPanel.Dock="Top"
            Content="Recarregar"
            Width="100"
            Command="{Binding RecarregarCommand}"
            Margin="0,0,0,8"/>
        <DataGrid ItemsSource="{Binding Itens}"
              AutoGenerateColumns="False"
              CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="*"/>
                <DataGridTextColumn Header="Qtde" Binding="{Binding Quantidade}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>