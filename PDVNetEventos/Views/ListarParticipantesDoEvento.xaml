<Window x:Class="PDVNetEventos.Views.ListarParticipantesDoEvento"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Participantes do evento" Height="420" Width="640"
        WindowStartupLocation="CenterScreen">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Participantes do evento" FontWeight="Bold" FontSize="16"/>
        </StackPanel>

        <Grid>
            <DataGrid ItemsSource="{Binding Itens}" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="60"/>
                    <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                    <DataGridTextColumn Header="CPF" Binding="{Binding CPF}" Width="130"/>
                    <DataGridTextColumn Header="Telefone" Binding="{Binding Telefone}" Width="120"/>
                    <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </DockPanel>
</Window>