<Window x:Class="PDVNetEventos.Views.RelAgendaParticipante"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agenda do Participante" Height="420" Width="620"
        WindowStartupLocation="CenterScreen">
    <DockPanel Margin="12">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,8">
            <TextBlock Text="Participante:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <ComboBox ItemsSource="{Binding Participantes}" DisplayMemberPath="NomeCompleto"
                SelectedValuePath="Id" SelectedValue="{Binding ParticipanteId}" Width="280"/>
            <Button Content="Carregar" Margin="8,0,0,0" Width="100" Command="{Binding CarregarAgendaCommand}"/>
        </StackPanel>

        <DataGrid ItemsSource="{Binding Itens}" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Evento" Binding="{Binding Evento}" Width="*"/>
                <DataGridTextColumn Header="Início" Binding="{Binding DataInicio, StringFormat=dd/MM/yyyy}" Width="120"/>
                <DataGridTextColumn Header="Fim" Binding="{Binding DataFim, StringFormat=dd/MM/yyyy}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>