<Window x:Class="PDVNetEventos.Views.cadastroEvento"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro de Evento"
        Height="560" Width="460"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Dados básicos -->
                <TextBlock Text="Nome do Evento"/>
                <TextBox Text="{Binding NomeEvento, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Text="Data de Início" Margin="0,10,0,0"/>
                <DatePicker SelectedDate="{Binding DataInicio}" />

                <TextBlock Text="Data de Fim" Margin="0,10,0,0"/>
                <DatePicker SelectedDate="{Binding DataFim}" />

                <TextBlock Text="Capacidade Máxima" Margin="0,10,0,0"/>
                <TextBox Text="{Binding Capacidade, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Text="Orçamento Máximo (R$)" Margin="0,10,0,0"/>
                <TextBox Text="{Binding Orcamento, UpdateSourceTrigger=PropertyChanged}" />

                <!-- Tipo de Evento -->
                <TextBlock Text="Tipo de Evento" Margin="0,10,0,0" />
                <ComboBox ItemsSource="{Binding TiposEvento}"
                          DisplayMemberPath="Nome"
                          SelectedValuePath="Id"
                          SelectedValue="{Binding TipoEventoId}" />

                <!-- Endereço do Evento (CEP) -->
                <GroupBox Header="Endereço do Evento" Margin="0,16,0,0">
                    <StackPanel Margin="8">

                        <TextBlock Text="CEP:"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBox Width="120"
                                     Text="{Binding Endereco.Cep, UpdateSourceTrigger=PropertyChanged}" />
                            <Button Content="Buscar"
                                    Margin="8,0,0,0"
                                    Command="{Binding Endereco.BuscarCepCommand}" />
                        </StackPanel>

                        <TextBlock Text="Logradouro:"/>
                        <TextBox Text="{Binding Endereco.Logradouro}" Margin="0,0,0,8"/>

                        <TextBlock Text="Complemento:"/>
                        <TextBox Text="{Binding Endereco.Complemento}" Margin="0,0,0,8"/>

                        <TextBlock Text="Bairro:"/>
                        <TextBox Text="{Binding Endereco.Bairro}" Margin="0,0,0,8"/>

                        <TextBlock Text="Cidade:"/>
                        <TextBox Text="{Binding Endereco.Localidade}" Margin="0,0,0,8"/>

                        <TextBlock Text="UF:"/>
                        <TextBox Width="60" Text="{Binding Endereco.Uf}" Margin="0,0,0,8"/>

                        <TextBlock Text="{Binding Endereco.Status}"
                                   Foreground="Gray"
                                   Margin="0,10,0,0"/>
                    </StackPanel>
                </GroupBox>

                <!-- Ações -->
                <Button Content="Salvar"
                        Width="120"
                        Margin="0,20,0,0"
                        HorizontalAlignment="Left"
                        Command="{Binding SalvarCommand}" />

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
