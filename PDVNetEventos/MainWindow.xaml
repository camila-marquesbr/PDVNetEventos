<Window x:Class="PDVNetEventos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PDVNetEventos"
        Height="420" Width="640"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Estilo base para todos os botões do menu -->
        <Style x:Key="MenuButton" TargetType="Button">
            <Setter Property="Width" Value="220"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>

        <!-- Título de seção -->
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Cartão (GroupBox simplificado) -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="12"/>
            <Setter Property="Background" Value="#FFF"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid Background="#F6F7F9" Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->
        <TextBlock Text="PDVNetEventos"
                   FontSize="22" FontWeight="Bold" Margin="4,0,0,10"/>

        <!-- Conteúdo em 2 colunas -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Coluna 1: Cadastros -->
            <Border Grid.Column="0" Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="Cadastros" Style="{StaticResource SectionTitle}" />
                    <Button Style="{StaticResource MenuButton}" Content="Listar Eventos"
                            Click="AbrirListarEventos_Click"/>
                    <Button Style="{StaticResource MenuButton}" Content="Cadastro de Evento"
                            Click="AbrirCadastroEvento_Click"/>
                    <Button Style="{StaticResource MenuButton}" Content="Cadastro de Participante"
                            Click="AbrirCadastroParticipante_Click"/>
                    <Button Style="{StaticResource MenuButton}" Content="Cadastro de Fornecedor"
                            Click="AbrirCadastroFornecedor_Click"/>
                </StackPanel>
            </Border>

            <!-- Coluna 2: Relatórios -->
            <Border Grid.Column="1" Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="Relatórios" Style="{StaticResource SectionTitle}" />
                    <Button Style="{StaticResource MenuButton}" Content="Agenda do Participante"
                            Click="AbrirRelAgenda_Click"/>
                    <Button Style="{StaticResource MenuButton}" Content="Fornecedores Mais Utilizados"
                            Click="AbrirRelTopFornecedores_Click"/>
                    <Button Style="{StaticResource MenuButton}" Content="Tipos de Participante"
                            Click="AbrirRelTiposParticipante_Click"/>
                    <Button Style="{StaticResource MenuButton}" Content="Saldo de Orçamento dos Eventos"
                            Click="AbrirRelSaldoEventos_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>